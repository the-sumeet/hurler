{
  "name": "hurler",
  "displayName": "Hurler",
  "description": "Execute Hurl HTTP request files directly from VS Code with environment variable support",
  "version": "0.0.2",
  "publisher": "sumeet221b",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "hurl",
    "http",
    "api",
    "testing",
    "requests"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/the-sumeet/hurler"
  },
  "homepage": "https://github.com/the-sumeet/hurler#readme",
  "bugs": {
    "url": "https://github.com/the-sumeet/hurler/issues"
  },
  "author": "Your Name",
  "license": "GPL-3.0",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hurler.runHurl",
        "title": "Run Hurl Request",
        "icon": "$(play)"
      }
    ],
    "languages": [
      {
        "id": "hurl",
        "extensions": [
          ".hurl"
        ],
        "aliases": [
          "Hurl",
          "hurl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hurl",
        "scopeName": "source.hurl",
        "path": "./syntaxes/hurl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Hurler",
      "properties": {
        "hurler.environmentFile": {
          "type": "string",
          "default": "",
          "description": "Path to environment file for Hurl requests"
        },
        "hurler.additionalArgs": {
          "type": "string",
          "default": "",
          "description": "Additional arguments to pass to hurl command"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}